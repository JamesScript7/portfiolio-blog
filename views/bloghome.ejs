<!-- views/bloghome.ejs -->

  <% include partials/blogheader %>
  <body>
      <div class="container">

        <% include partials/blognavbar %>

          <div class="headerblock">
            <h1>All About Web Development</h1>
            <p class="lead">Check out the articles below!</p>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <div class="list-group">

                <!-- loop over blog articles on page -->
                <% articles.forEach((article) => { %>
                  <a href="/blogpost/<%= article.id %>" class="list-group-item">
                    <h4 class="list-group-item-heading"><%= article.title %></h4>
                    <p class="list-group-item-text"><%= article.author %></p>
                  </a>
                <% }) %>

              </div>
            </div>

          </div>

        <% include partials/blogfooter %>

      </div>
