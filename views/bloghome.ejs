<!-- views/bloghome.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Web Development Blog</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
          padding-top: 20px;
          padding-bottom: 20px;
        }

        .headerblock {
          margin-top: 10px;
        }
    </style>
  </head>

  <body>
      <div class="container">
        <% include partials/blognavbar %>
          <div class="headerblock">
            <h1>All About Web Development</h1>
            <p class="Check out the articles below!"></p>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <div class="list-group">
                <!-- loop over blog posts and render them -->
                <% posts.forEach((post) => { %>
                  <a href="/blogpost/<%= post.id %>" class="list-group-item">
                    <h4 class="list-group-item-heading"><%= post.title %></h4>
                    <p class="list-group-item-text"><%= post.author %></p>
                  </a>
                <% }) %>
              </div>
            </div>
          </div>
        <% include partials/blogfooter %>
      </div>
  </body>
</html>
